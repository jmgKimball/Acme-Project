<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>New_Application_must_have_status_as_New</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISNEW(),
    NOT(ISPICKVAL(Application_Status__c , &apos;New&apos;))
)</errorConditionFormula>
    <errorMessage>Application Status must be New</errorMessage>
</ValidationRule>
